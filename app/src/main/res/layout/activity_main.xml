<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/about_me">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainText"
            android:textStyle="bold"
            android:textSize="35sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="About Me"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/defText"
            android:textSize="16sp"
            android:layout_below="@id/mainText"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:text="'Me. The two-letter word that packs a punch. The pronoun that defines an individual. Me, the unique being that encompasses a lifetime of experiences, thoughts, and emotions. Me, the sum of all my quirks, interests, and idiosyncrasies. Me, the person who is constantly evolving and growing, yet always anchored by my identity. Me, the soul in this body that makes me, well, me.'
        "/>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/defText"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/go_button_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's Go"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:id="@+id/arrowGo"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_keyboard_double_arrow_right_24"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>